@using static SignUpLogin.Models.SignUpModel;
@model SignUpModel

<link rel="stylesheet" href="~/css/Accounts.css" />


<!-- Modal -->
<div class="modal fade" id="id_@Model.Id"  tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 style="color:#5278a3">Update</h2>

            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Account" asp-action="_Update">

                    <input asp-for="Id" hidden />
                    <div class="fName_lName d-flex gap-2 w-100">
                        <div class="FirstName w-100">
                            <label asp-for="FirstName" class="color-blue"></label>
                            <input type="text" class="form-control w-100" asp-for="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="LastName w-100">
                    <label asp-for="LastName" class="color-blue"></label>
                    <input type="text" class="form-control w-100" asp-for="LastName"  />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    
                    <div class="Email">
                    <label asp-for="Email" class="color-blue"></label>
                    <input asp-for="Email" type="email" class="w-100 form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2 w-100">
                    <div class="w-100">
                    <label asp-for="Password" class="color-blue"></label>
                    <input type="password" asp-for="Password" class="w-100 form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="LastName w-100">
                    <label asp-for="ConfirmPassword" class="color-blue"></label>
                    <input type="password" asp-for="ConfirmPassword" class="w-100 form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="d-flex gap-2 w-100">
                    <div class="w-100 d-flex align-items-start  flex-column">
                    <label asp-for="Gender" class="color-blue"></label>
                    <div class="d-flex flex-row gap-2">
                    <input type="radio" asp-for="Gender" class="w-100 " value="Male" />
                    <label class="form-check-label">
                    Male
                    </label>
                    <input type="radio" asp-for="Gender" class="w-100 " value="Female" />
                    <label class="form-check-label">
                    Female
                    </label>
                    </div>
                    </div>

                    <div class="checkbox w-100 d-flex flex-column">
                    <label class="color-blue">Hobbies</label>
                    <div class="d-flex gap-1">
                    <input type="checkbox" asp-for="Music" class="form-check"/>
                    <label class="form-check-label">
                    Music
                    </label>

                    <input type="checkbox" asp-for="Sports"  class="form-check" />
                    <label class="form-check-label">
                    Sports
                    </label>

                    <input type="checkbox" asp-for="Travel"  class="form-check" />
                    <label class="form-check-label">
                    Travel
                    </label>

                    <input type="checkbox" asp-for="Movies"  class="form-check" />
                    <label class="form-check-label">
                    Movie
                    </label>
                    </div>


                    </div>
                    </div>

                    <div class="d-flex gap-2 w-100">
                    <div class="w-100 d-flex flex-column">
                    <label asp-for="sourceOfIncome" class="color-blue"></label>
                    <select asp-for="sourceOfIncome" class="form-control" asp-items="Html.GetEnumSelectList<SourceOfIncome>()"></select>

                    </div>
                    <div class="w-100 d-flex flex-column">
                    <label asp-for="Income" class="color-blue"></label>
                    <div class="d-flex">
                    <input type="range" min="20000" max="100000" step="1000" value="20000" id="idrange" asp-for="Income" class=" w-100 mt-2" />
                    <div id="idvalue">20K</div>
                    </div>
                    </div>
                    </div>

                    <div class="d-flex gap-2 w-100">
                    <div class="w-100 d-flex flex-column">
                    <label >Upload profile picture</label>
                    <input type="file" class="form-control" />

                    </div>
                    <div class="w-100">
                    <label asp-for="Age" class="color-blue"></label>
                    <input type="text" asp-for="Age" class="w-100 form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="Bio">
                    <label class="color-blue">Bio</label>
                    <textarea asp-for="Bio" class="w-100 form-control"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" value="Update">Update</button>
                    </div>


                </form>
                </div>
            </div>
        </div>
        </div>
